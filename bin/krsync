#!/bin/bash


# Ref: https://serverfault.com/questions/741670/rsync-files-to-a-kubernetes-pod


if [[ -z $KRSYNC_STARTED ]]; then
    export KRSYNC_STARTED=true
    exec rsync --blocking-io --rsh "$0" "$@"
fi

# Running as --rsh
namespace=''
pod="$1"
shift

if [[ "X$pod" = "X-l" ]]; then
    pod="$1"
    shift
    namespace="-n $1"
    shift
fi

exec kubectl $namespace exec -i "$pod" -- "$@"
